[alias]
  s = status
  st = status -sb
  sta = stash
  pop = stash pop
  ci = commit
  co = checkout
  com = checkout master
  cod = checkout develop
  br = branch
  rh = reset --hard
  cp = cherry-pick
  re = rebase
  rea = rebase --abort
  rec = rebase --continue
  rem = rebase master
  riom = rebase -i origin/master
  reom = rebase origin/master
  riod = rebase -i origin/develop
  reod = rebase origin/develop
  me = merge
  ri = rebase -i
  pl = pull
  ps = push
  pf = push --force-with-lease
  puhs = push
  h1 = log --graph --pretty=format:'%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  h2 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  h3 = log --pretty=format:'%C(magenta)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --graph
  hh = !git h3 -20
  fe = fetch
  wc = whatchanged
  wd = diff --word-diff
  ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
  theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
  remotes = remote -v
